<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meeting.NotOpenActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nanum_square_roundb"
        android:text="회의에 참가할 수 없습니다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanum_square_roundb"
        android:text="호스트가 아직 회의를 시작하지 않았습니다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />


    <Button
        android:id="@+id/btn_moveToBefore"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/green_primary"
        android:fontFamily="@font/nanum_square_roundb"
        android:text="이전화면으로 이동"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title2" />


    <TextView
        android:id="@+id/txt_title3"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nanum_square_roundb"
        android:text="호스트라면 로그인하여 \n이 회의를 시작합니다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_moveToBefore" />

    <Button
        android:id="@+id/btn_moveToLogin"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/green_dark"
        android:fontFamily="@font/nanum_square_roundb"
        android:text="로그인"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title3" />


</androidx.constraintlayout.widget.ConstraintLayout>