<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layout_chat_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nickname"
            android:layout_width="70dp"
            android:textSize="14sp"
            android:text="nickname"
            android:fontFamily="@font/nanum_square_roundr"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/default_user"
            android:background="@drawable/default_profile_img" />

        <TextView
            android:id="@+id/txt_nickname_host"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:fontFamily="@font/nanum_square_roundr"
            android:layout_marginTop="4dp"
            android:text="(호스트)"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <!--오른쪽 왼쪽 정렬: android:textAlignment="textEnd"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="chat_message chat_message chat_message"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_square_roundr"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/chat_message_shape"/>

        <TextView
            android:id="@+id/txt_sendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_square_roundr"
            android:text="10:27 AM" />

    </LinearLayout>
</LinearLayout>
